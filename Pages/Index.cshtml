@page
@model IndexModel
@{
    ViewData["Title"] = "Stock Quote in Real Time";
}

@section Scripts {
    <script src="~/lib/signalr/dist/browser/signalr.min.js"></script>
    <script src="~/js/index.js" asp-append-version="true"></script>
}

<form class="form-inline">
    <div class="form-group">
        <input type="text" class="form-control" id="symbol" value="TSLA">
    </div>
    <button type="button" class="btn btn-primary" id="subscribe">Subscribe</button>
</form>

<br />

<form>
    <div class="form-group row">
        <label for="companyName" class="col-sm-2 col-form-label">Company Name</label>
        <div class="col-sm-10">
            <input type="text" readonly class="form-control-plaintext" id="companyName">
        </div>
    </div>
    <div class="form-group row">
        <label for="exchange" class="col-sm-2 col-form-label">Exchange</label>
        <div class="col-sm-10">
            <input type="text" readonly class="form-control-plaintext" id="exchange">
        </div>
    </div>
    <div class="form-group row">
        <label for="quote" class="col-sm-2 col-form-label">Quote</label>
        <div class="col-sm-10">
            <input type="text" readonly class="form-control-plaintext" id="quote">
        </div>
    </div>
</form>